{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",     
    "strict": true,                        
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true,        
    "noImplicitAny": true,
    "outDir": "./dist",  
    "rootDir": "./src",   
    "baseUrl": "./" 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
